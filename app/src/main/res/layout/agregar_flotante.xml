<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDDDDD"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cerrarAgregarFlotante"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="end"
            android:layout_margin="10sp"
            app:srcCompat="@drawable/ic_cerrar_foreground"
            tools:ignore="ImageContrastCheck" />

        <EditText
            android:id="@+id/fechaAgregartxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fecha"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="5sp"
            android:inputType="date" />

        <EditText
            android:id="@+id/horaEntradaTxtAgregar"
            android:hint="Hora de inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="5sp"
            />

        <EditText
            android:id="@+id/horaSalidaTxtAgregar"
            android:hint="Hora de salida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="55sp"
            />

        <Button
            android:id="@+id/agregarBtnRegistro"
            android:backgroundTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="10sp"
            android:text="Agregar" />

    </LinearLayout>

</LinearLayout>